#!/bin/zsh

start-docker () {
    docker-compose build && docker-compose up
}

rebuild-venv () {
    rm -rf server/venv &&
    python3 -m venv server/venv &&
    source server/venv/bin/activate &&
    pip install -r server/src/requirements.txt &&
    deactivate
}


$1

